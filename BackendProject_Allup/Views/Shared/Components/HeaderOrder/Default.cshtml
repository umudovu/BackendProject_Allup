@model List<Order>


   <div class="header-cart">
                                    <div class="cart-btn border-0 d-flex justify-content-center">
                                        <a class="d-flex align-items-center " asp-controller="order" asp-action="checkout">
                                            <i class="fa-solid fa-receipt"></i>
                                            <span class="count">@Model.Count</span>
                                        </a>
                                    </div>
                                @if(User.Identity.IsAuthenticated){
                                    <div class="mini-cart">
                                        <ul class="cart-items">
                                             @foreach (var item in Model)
                                             {
                                                  @if(item.OrderStatus!=OrderStatus.Completed){
                                                      <li>
                                                        <div class="single-cart-item d-flex">
                                                            <div class="cart-item-content media-body">
                                                                <h5 class="product-name"><a asp-controller="order" asp-action="orderdetail" asp-route-id="@item.Id"> @item.FirstName @item.Surname</a></h5>
                                                                <h5 class="product-name"><a asp-controller="order" asp-action="orderdetail" asp-route-id="@item.Id">@item.CreatedAt </a></h5>
                                                                <h5 class="product-name"><a asp-controller="order" asp-action="orderdetail" asp-route-id="@item.Id">@item.PaymantMethod </a></h5>
                                                                <h5 class="product-name"><a asp-controller="order" asp-action="orderdetail" asp-route-id="@item.Id">@item.OrderStatus </a></h5>
                                                            </div>
                                                        </div>
                                                     </li>
                                                  }
                                             }
                                            

                                           
                                        <div class="checkout text-center">
                                            <a asp-controller="myaccount" asp-action="index"  class="main-btn">Go to</a>
                                        </div>
                                        </ul>
                                        
                                    </div>
                                } 
                                    
                                    
                                    
                                    <!-- mini cart -->
                            
                </div>

                    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />